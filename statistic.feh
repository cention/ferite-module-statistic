		function getTotal( number index ) {
			number total = 0;
			number size = .result.size();
			for( number i = 0; i < size; ++i ) {
				for( number j = 0; j < .result[i].size(); j++ ) {
					string name = .result[i].getName(j);
					if( name.index('key_') == 0 ) {
						total += .result[i][j];
					}
				}
			}
			return total;
		}
	}

